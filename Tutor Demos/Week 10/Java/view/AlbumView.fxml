<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<VBox fx:controller="controller.AlbumController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="10" prefWidth="200">
        <ImageView fx:id="artView" fitHeight="300" fitWidth="300">
<!--            <Image url="/view/image/ready_to_be.jpg" />-->
        </ImageView>
        <Text fx:id="albumTxt"/>
        <Text fx:id="artistTxt"/>
        <HBox alignment="CENTER" spacing="10">
                    <Label text="Units Sold:"/>
                    <Text fx:id="soldTxt"/>
                    <Label text="Profit:"/>
                    <Text fx:id="profitTxt" />
        </HBox>
        <HBox>
            <Button fx:id="buyBtn" text="BUY" onAction="#handlePurchase" prefWidth="150"/>
            <Button text="Close" onAction="#handleClose" prefWidth="150"/>
        </HBox>

    <stylesheets>
        <URL value="@/view/style.css"/>
    </stylesheets>


</VBox>